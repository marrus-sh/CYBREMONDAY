{% comment %}
Creates a link.
{% endcomment %}{% assign linkstart = include.href | slice: 0, 7 %}{% if linkstart == "http://" or linkstart == "https:/" %}{% assign foreign = true %}{% else %}{% assign foreign = false %}{% endif %}{% assign attrs = include.href | uri_escape | prepend: "target=" %}{% if foreign %}{% assign attrs = attrs | append: "`type=foreign" %}{% assign hatts = "Rel=external noopener noreferrer" %}{% else %}{% assign attrs = attrs | append: "`type=local" %}{% assign hatts = "" %}{% endif %}{% if include.title %}{% assign hatts = hatts | append: "`title=" | append: include.title %}{% endif %}{% if include.a %}{% assign attrs = attrs | append: "`" | append: include.a %}{% endif %}{% if include.h %}{% assign hatts = hatts | append: "`" | append: include.h %}{% endif %}{% if include.vcontent %}{% include _ o="ref" a=attrs h=hatts v=include.vcontent x=1 %}{% else %}{% include _ o="ref" a=attrs h=hatts c=include.content x=1 %}{% endif %}
{%- comment %}[Strip whitespace]{% endcomment -%}
